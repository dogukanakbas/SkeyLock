# Production Environment Variables
# Copy this file to .env and update with your production values

# Database Configuration
DATABASE_URL=postgresql://iot_prod_user:CHANGE_THIS_PASSWORD@postgres:5432/iot_security_prod
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# JWT Security
JWT_SECRET=CHANGE_THIS_TO_SUPER_SECURE_256_BIT_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_STRIPE_SECRET_KEY
STRIPE_PUBLIC_KEY=pk_live_YOUR_LIVE_STRIPE_PUBLIC_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_LIVE_WEBHOOK_SECRET

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_STARTER_PRICE_ID=price_YOUR_STARTER_PRICE_ID
STRIPE_PROFESSIONAL_PRICE_ID=price_YOUR_PROFESSIONAL_PRICE_ID
STRIPE_ENTERPRISE_PRICE_ID=price_YOUR_ENTERPRISE_PRICE_ID

# Email Configuration (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
FROM_EMAIL=noreply@yourdomain.com

# Application Configuration
ENVIRONMENT=production
DEBUG=false
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com
MARKETING_URL=https://yourdomain.com

# Domain Configuration
ALLOWED_HOSTS=["yourdomain.com","app.yourdomain.com","api.yourdomain.com"]
CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]

# Security Configuration
SECURE_COOKIES=true
HTTPS_ONLY=true
HSTS_MAX_AGE=31536000

# Monitoring & Logging
SENTRY_DSN=YOUR_SENTRY_DSN_FOR_ERROR_TRACKING
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Grafana Configuration
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100
MAX_REQUESTS_PER_HOUR=1000

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["pdf","csv","json","xml"]

# Agent Configuration
AGENT_UPDATE_URL=https://api.yourdomain.com/agent/update
AGENT_VERSION=1.0.0
AGENT_AUTO_UPDATE=true

# Third-party Integrations
VULNERABILITY_DB_API_KEY=YOUR_VULNERABILITY_DB_API_KEY
THREAT_INTEL_API_KEY=YOUR_THREAT_INTELLIGENCE_API_KEY

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem